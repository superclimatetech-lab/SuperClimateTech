# Render.com Environment Variables Template
# Copy these to Render Dashboard â†’ Environment Variables
# Instructions: https://render.com/docs/environment-variables

# ============================================
# Django Core Settings
# ============================================
ENVIRONMENT=production
DEBUG=False
DJANGO_SETTINGS_MODULE=supertech_backend.settings
PYTHONUNBUFFERED=true

# Generate a new SECRET_KEY using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-generate-a-new-one

# Comma-separated list of allowed hosts
# IMPORTANT: Add your actual Render domain here
ALLOWED_HOSTS=superclimatetech.onrender.com,localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================
# Render PostgreSQL connection details (provided by Render)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=supertech_db
DB_USER=supertech_user
DB_PASSWORD=your-secure-database-password
DB_HOST=your-render-postgres-host.c.render.com
DB_PORT=5432

# ============================================
# Redis Configuration (Optional - for Celery)
# ============================================
# Only needed if using Celery background tasks
REDIS_HOST=your-render-redis-host.c.render.com
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://your-render-redis-host.c.render.com:6379/0
CELERY_RESULT_BACKEND=redis://your-render-redis-host.c.render.com:6379/0

# ============================================
# External API Keys
# ============================================
# Weather API
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Email Configuration
# ============================================
# Gmail SMTP Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=noreply@supertech-weather.com

# ============================================
# Security Settings
# ============================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================
# CORS and CSRF Settings
# ============================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://yourdomain.render.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://yourdomain.render.com

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=https://yourdomain.com

# ============================================
# Logging
# ============================================
LOG_LEVEL=WARNING
